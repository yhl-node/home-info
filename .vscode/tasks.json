{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.dev.json",
      "option": "watch",
      "problemMatcher": [ "$tsc-watch" ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "label": "tsc",
      "auto": true,
      "dependsOn":["tsc-consts", "tsc-utils"]
    }
  ]
}
